<main>

	<h2>EDIT THIS TOP?</h2>

	<a href="/">Return to Home Page</a>

	<div id="edit-form" class="clothes-container-show">
    <form action="/users/{{userId}}/closet/{{closetId}}/tops/{{tops._id}}?_method=PATCH" method="POST">
      <div>
        <label for="type">name: </label>
        <input type="text" name="type" value="{{tops.type}}">
      </div>
      <div>
        <label for="color">color: </label>
        <input type="text" name="color" value="{{tops.color}}">
      </div>
      <div>
        <input type="file" name='img' >

        <div class="custom-file" >
  <input type="file" class="custom-file-input" id="customFile" >
  <label class="custom-file-label" for="customFile">Choose file</label>
</div>
        <img src="{{tops.img}}">
      </div>
      <button type="submit">Save this Description</button>
    </form>
	</div>
</main>