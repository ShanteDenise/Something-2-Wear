<main>

	<h2>EDIT THIS TOP?</h2>

  <a href="./">Back</a>
	<a href="/">Return to Home Page</a>

	<div id="edit-form" class="clothes-container-show">
    <form action="/users/{{userId}}/closet/{{closetId}}/shoes/{{shoes._id}}?_method=PATCH" method="POST">
      <div>
        <label for="type">name: </label>
        <input type="text" name="type" value="{{shoes.type}}">
      </div>
      <div>
        <label for="color">color: </label>
        <input type="text" name="color" value="{{shoes.color}}">
      </div>
      <div>
        <label for="img">image: </label>
        <input type="text" name='img' >
        <img class="rounded mx-auto d-block"  src="{{shoes.img}}">
        </input>

      </div>
      <button class="btn btn-primary" type="submit">Save this Description</button>
    </form>
	</div>
</main>