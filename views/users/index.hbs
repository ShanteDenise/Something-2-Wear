{{#each user}}
<div class="row">
  <div class="col-sm-4">
    <div class="card" style="width: 30rem;">
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <img class="card-img-top" src="{{img}}" alt="">
        {{#if closet}}
        {{#each closet}}
        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
        <a href="/users/{{../_id}}/closet/{{_id}}"> <button class="btn btn-primary">Go To My Closet</button></a>
        {{/each}}
        {{else}}
        <a href="/users/{{_id}}/closet/new">Create a closet</a>
        {{/if}}
        <form action="/users/{{_id}}?_method=DELETE" method="POST">
          <button class="btn btn-danger
         " type="submit">DELETE YOUR PROFILE</button>
        </form>
        {{/each}}





  
